@MastersThesis{Creed_ImplementationValidationObstacle_2011,
  author   = {Benjamin C. Creed},
  school   = {University of California, Davis},
  title    = {Implementation and Validation of Obstacle Avoidance for Autonomous Roadside Mowing},
  year     = {2011},
  address  = {Department of Mechanical and Aeronautical Engineering},
  type     = {mathesis},
  abstract = {The AHMCT Research Center has developed the "Autonomower", an autonomous roadside mowing system. Its basic design is a differentially steered robot built on a rigid aluminum frame. The frame houses a motor controller, two drive motors with encoders, a GPS, a PC, and several batteries. Accurate path tracking is achieved by the fusion of encoder data with GPS data by the utilization of an Extended Kalman Filter (EKF). The purpose of this thesis will be to document the process of optimizing and adding further functionality to the existing Autonomower design. It was of particular importance to remedy the Autonomower's inability to detect and avoid obstacles. To perform this task, various types of sensors were evaluated for their ability to interpret obstacle information. Ultimately, a SICK LMS291 LIDAR sensor was selected for integration. The transition from a fixed path to an obstacle driven path warranted the evaluation of several different types of path tracking algorithms. Additionally, a robust and efficient algorithm was needed to interpret the LIDAR sensor data. Path tracking and obstacle avoidance algorithms were evaluated using a series of both qualitative and quantitative measures. These algorithms were tested in the context of a mowing operation based on a preplanned path. The testing resulted in the final selection and implementation of a pure-pursuit based reactive obstacle avoidance algorithm. Final testing was conducted to confirm the successful integration of the algorithm into the Autonomower software.},
  eprint   = {https://www.proquest.com/docview/871470607/},
  groups   = {MOW},
  journal  = {ProQuest Dissertations and Theses},
  pages    = {177},
