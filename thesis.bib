  file      = {Full Text PDF:https\://onlinelibrary.wiley.com/doi/pdfdirect/10.1111/j.1061-2971.2004.0325.x:application/pdf},
  groups    = {MOW},
  keywords  = {erosion, motorway slopes, restoration, soil properties, soil water availability, vegetation},
  language  = {en},
  publisher = {Wiley},
  url       = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1061-2971.2004.0325.x},
  urldate   = {2025-03-23},
}

@Article{Baets_ImpactRootArchitecture_2007,
